@model Competitor

<h1>Delete Competitor</h1>

<h3>Are you sure you want to delete this competitor?</h3>
<div>
    <h4>Competitor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <strong>First Name: </strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitorFirstName)
        </dd>

        <dt class="col-sm-2">
            <strong>Last Name: </strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitorLastName)
        </dd>

        <dt class="col-sm-2">
            <strong>Weight: </strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt class="col-sm-2">
            <strong>Category: </strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <p>If will be a competitor deleted, all his results will also be deleted!</p>

    @using (Html.BeginForm("Delete", "Competitor", new { id = Model.CompetitorId }, FormMethod.Post))
    {
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    }
</div>
