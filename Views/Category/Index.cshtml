@model List<Category>

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Weight</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Weight</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Create New</a>